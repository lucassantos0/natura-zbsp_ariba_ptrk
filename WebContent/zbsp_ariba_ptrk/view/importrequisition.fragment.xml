<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout">
	<Table
		rows="{BuyingPr>/erpRequisition}"
		visibleRowCount="7">
		<columns>
			<Column
				width="9rem"
				filterProperty="banfn"
				sortProperty="banfn">
				<m:Label text="Requisição Ariba" />
				<template>
					<m:Link
						text="{BuyingPr>banfn}"
						href="{BuyingPr>banfn}"
						target="_blank" />
				</template>
			</Column>
			<Column
				width="6rem"
				sortProperty="dateTime">
				<m:Label text="Data" />
				<template>
					<m:Text
						text="{
								path: 'BuyingPr>dateTime',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
							}"
						wrapping="false" />
				</template>
			</Column>
			<Column
				width="12rem"
				filterProperty="enviado"
				sortProperty="enviado">
				<m:Label text="enviado" />
				<template>
					<m:Text text="{BuyingPr>enviado}" />
				</template>
			</Column>
			<Column
				width="36rem"
				filterProperty="msg"
				sortProperty="msg">
				<m:Label text="Mensagem" />
				<template>
					<m:Text text="{BuyingPr>msg}" />
				</template>
			</Column>
		</columns>
		<footer>
			<m:OverflowToolbar></m:OverflowToolbar>
		</footer>
	</Table>
</core:FragmentDefinition>