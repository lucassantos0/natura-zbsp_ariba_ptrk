<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout">
	<m:MessageStrip
		text="Recebimento de pedidos de compra no SAP ECC a partir de requisições de compra do Ariba Buying"
		showIcon="true"
		showCloseButton="true"
		class="sapUiMediumMarginBottom" />
	<Table
		enableBusyIndicator="true"
		rows="{Main>/zclAribaPurchaseOrder}"
		visibleRowCount="7">
		<columns>
			<Column
				width="9rem"
				filterProperty="Name">
				<m:Label text="Requisição Ariba" />
				<template>
					<m:Link
						text="{Main>line/businessDocument}"
						href="{Main>line/businessDocumentUrl}"
						target="_blank" />
				</template>
			</Column>
			<Column width="6rem" sortProperty="line/entryDate">
				<m:Label text="Data" />
				<template>
					<m:Text
						text="{
								path: 'Main>line/entryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
							}" 		
						wrapping="false" />
				</template>
			</Column>
			<Column width="24rem">
				<m:Label text="PI" />
				<template>
					<m:Link
						text="{= ${Main>line/sourceId}.substr(0,36) }"
						href="{Main>line/sourceUrl}"
						target="_blank" />
				</template>
			</Column>
			<Column width="7rem">
				<m:Label text="PI status" />
				<template>
					<m:Text
						text="{Main>line/sourceStatusText}"
						wrapping="false" />
				</template>
			</Column>
			<Column width="9rem">
				<m:Label text="RFC" />
				<template>
					<m:Link
						text="{= ${Main>line/middlewareId}.substr(0,36) }"
						href="#"
						target="_blank" />
				</template>
			</Column>
			<Column width="7rem">
				<m:Label text="RFC status" />
				<template>
					<m:Text
						text="{Main>line/middlewareStatusText}"
						wrapping="false" />
				</template>
			</Column>
		</columns>
		<footer>
			<m:OverflowToolbar></m:OverflowToolbar>
		</footer>
	</Table>
</core:FragmentDefinition>