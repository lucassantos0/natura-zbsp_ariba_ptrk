<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout">
	<m:VBox>
		<m:MessageStrip
			text="Envio de pedidos de compras (ME21N) para os fornecedores no Ariba Network atravÃ©s do SAP PI (CI9)"
			showIcon="true"
			showCloseButton="true"
			class="sapUiMediumMarginBottom" />
		<Table
			alternateRowColors="true"
			rows="{Main>/zclAribaOrderRequest}"
			visibleRowCount="7">
			<columns>
				<Column
					width="9rem"
					filterProperty="Name">
					<m:Label text="Pedido compra" />
					<template>
						<m:Link
							text="{Main>line/businessDocument}"
							href="{Main>line/businessDocumentUrl}"
							target="_blank" />
					</template>
				</Column>
				<Column
					width="6rem"
					sortProperty="line/entryDate">
					<m:Label text="Data" />
					<template>
						<m:Text
							text="{
								path: 'Main>line/entryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
							}"
							wrapping="false" />
					</template>
				</Column>
				<Column width="9rem">
					<m:Label text="IDOC" />
					<template>
						<m:Link
							text="{Main>line/sourceId}"
							href="{Main>line/sourceUrl}"
							target="_blank" />
					</template>
				</Column>
				<Column width="7rem">
					<m:Label text="IDOC status" />
					<template>
						<m:Text
							text="{Main>line/sourceStatusText}"
							wrapping="false" />
					</template>
				</Column>
				<Column width="24rem">
					<m:Label text="PI" />
					<template>
						<m:Link
							text="{= ${Main>line/middlewareId}.substr(0,36) }"
							href="{Main>line/middlewareUrl}"
							target="_blank" />
					</template>
				</Column>
				<Column width="7rem">
					<m:Label text="PI status" />
					<template>
						<m:Text
							text="{Main>line/middlewareStatus}"
							wrapping="false" />
					</template>
				</Column>
				<Column width="9rem">
					<m:Label text="Ariba Network" />
					<template>
						<m:Link
							text="{Main>line/targetId}"
							href="{Main>line/targetUrl}"
							target="_blank" />
					</template>
				</Column>
				<Column width="7rem">
					<m:Label text="AN status" />
					<template>
						<m:Text
							text="{Main>line/targetStatus}"
							wrapping="false" />
					</template>
				</Column>
			</columns>
		</Table>
	</m:VBox>
</core:FragmentDefinition>