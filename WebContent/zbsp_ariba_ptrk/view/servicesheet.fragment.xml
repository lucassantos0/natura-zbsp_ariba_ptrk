<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout">
	<m:VBox>
		<m:MessageStrip
			text="Entrada de folhas de serviÃ§o (ML81N) enviados pelo fornecedor desde o Ariba Network"
			showIcon="true"
			showCloseButton="true"
			class="sapUiMediumMarginBottom" />
		<Table
			alternateRowColors="true"
			enableBusyIndicator="true"
			rows="{Main>/zclAribaServentrysheet}"
			visibleRowCount="7">
			<columns>
				<Column
					width="9rem"
					filterProperty="Name">
					<m:Label text="Ref Fornecedor" />
					<template>
						<m:Link
							text="{Main>line/businessDocument}"
							href="{Main>line/businessDocumentUrl}"
							target="_blank" />
					</template>
				</Column>
				<Column
					width="6rem"
					sortProperty="line/entryDate">
					<m:Label text="Data" />
					<template>
						<m:Text
							text="{
								path: 'Main>line/entryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
							}"
							wrapping="false" />
					</template>
				</Column>
				<Column width="28rem">
					<m:Label text="PI" />
					<template>
						<m:Link
							text="{= ${Main>line/sourceId}.substr(0,36) }"
							href="{Main>line/sourceUrl}"
							target="_blank"
							wrapping="false" />
					</template>
				</Column>
				<Column width="7rem">
					<m:Label text="PI status" />
					<template>
						<m:Text
							text="{Main>line/sourceStatusText}"
							wrapping="false" />
					</template>
				</Column>
				<Column width="12rem">
					<m:Label text="RFC" />
					<template>
						<m:Link
							text="{Main>line/targetId}"
							href="{Main>line/targetUrl}"
							target="_blank" />
					</template>
				</Column>
				<Column width="7rem">
					<m:Label text="RFC status" />
					<template>
						<m:Text
							text="{Main>line/targetStatusText}"
							wrapping="false" />
					</template>
				</Column>
			</columns>
		</Table>
	</m:VBox>
</core:FragmentDefinition>