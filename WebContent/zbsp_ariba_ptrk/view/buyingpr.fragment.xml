<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.ui.table" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout">
	<Table
		rows="{BuyingPr>/buyingPr}"
		visibleRowCount="7">
		<columns>
			<Column
				width="9rem"
				filterProperty="Name">
				<m:Label text="Requisição Ariba" />
				<template>
					<m:Link
						text="{BuyingPr>buyingRequisition}"
						href="{BuyingPr>buyingRequisitionUrl}"
						target="_blank" />
				</template>
			</Column>
			<Column width="6rem" sortProperty="timeUpdated">
				<m:Label text="Data" />
				<template>
					<m:Text
						text="{
								path: 'BuyingPr>timeUpdated',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
							}" 		
						wrapping="false" />
				</template>
			</Column>
			<Column width="8rem">
				<m:Label text="Status" />
				<template>
					<m:Text
						text="{BuyingPr>status}" />
				</template>
			</Column>
			<Column width="8rem">
				<m:Label text="Sourcing Status" />
				<template>
					<m:Text
						text="{BuyingPr>sourcingStatusString}" />
				</template>
			</Column>
			<Column width="9rem">
				<m:Label text="Sistema Origem" />
				<template>
					<m:Text
						text="{BuyingPr>originatingSystem}" />
				</template>
			</Column>
			<Column width="6rem">
				<m:Label text="ERP Req." />
				<template>
					<m:Text
						text="{BuyingPr>erpRequisition}" />
				</template>
			</Column>
		</columns>
		<footer>
			<m:OverflowToolbar></m:OverflowToolbar>
		</footer>
	</Table>
</core:FragmentDefinition>